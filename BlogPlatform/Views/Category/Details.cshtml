@model blog_template_practice.Models.Category
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>Category Details</title>
</head>
<body>
    <h1>@Model.Name</h1>
    @foreach (var content in Model.Contents)
    {
        <a href="/Content/Details/@content.Id">@content.Title</a>
        <p>@content.Author</p>
        <p>@content.PublishDate</p>
    }
    
    <p><a href="/Content/CreateByCategoryId/@Model.Id">Add a post in @Model.Name</a></p>
    <p><a href="/Content/Create">Create a blog post</a></p>
    <p><a href="/Category/Index">Return to Category Index</a></p>
</body>
</html>
