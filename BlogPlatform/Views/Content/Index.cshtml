@model IEnumerable<blog_template_practice.Models.Content>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <link href="~/Style/StyleSheet.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Teko&family=Titillium+Web&display=swap" rel="stylesheet">
    <title>Blog Posts</title>
</head>
<body>
    <header>
        <h1>All Blog Posts</h1>
    </header>
    <nav>
        <div class="nav-link">
            <a href="">Home</a>
        </div>
        <div class="nav-link">
            <a href="/Category/Index">Categories</a>
        </div>
        <div class="nav-link">
            <a href="/Content/Create">Create a Post</a>
        </div>
    </nav>

    @foreach (var content in Model)
    {
        <a class="blog-post-link" href="/Content/Details/@content.Id">
            <div class="blog-post">
                <p><span class="post-title">@content.Title</span> by @content.Author</p>
                <p><strong>Date Published</strong>: @content.PublishDate</p>
            </div>
        </a>
    }

</body>
</html>